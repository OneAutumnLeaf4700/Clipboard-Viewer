{
    "general": {
        "start_minimized": false,
        "start_with_windows": false,
        "minimize_to_tray": true,
        "close_to_tray": true,
        "check_updates": true
    },
    "history": {
        "max_items": 100,
        "max_age_days": 30,
        "store_text": true,
        "store_rtf": true,
        "store_html": true,
        "store_image": true,
        "store_files": true,
        "store_custom": false,
        "auto_clean": true
    },
    "privacy": {
        "exclude_passwords": true,
        "exclude_sensitive_fields": true,
        "exclude_patterns": [
            "^\\d{4}[- ]?\\d{4}[- ]?\\d{4}[- ]?\\d{4}$",
            "^\\d{3}-\\d{2}-\\d{4}$"
        ]
    },
    "appearance": {
        "theme": "system",
        "font_family": "Segoe UI",
        "font_size": 10,
        "max_preview_size": 500
    },
    "hotkeys": {
        "toggle_window": "Ctrl+Alt+C",
        "copy_last": "Ctrl+Alt+V"
    }
}